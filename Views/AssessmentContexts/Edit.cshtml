@model AssessmentContextVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Assessment Contexts</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br/>
            
            <div class="form-group">
                <label asp-for="AssessmentCategory" class="control-label"></label>
                <select asp-for="AssessmentCategory" class="form-select" asp-items="ViewBag.AssessmentCategory"></select>
                <span asp-validation-for="AssessmentCategory" class="text-danger"></span>
            </div>
            <br />
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <a asp-action="Index" class="btn btn-dark">Back to List</a> &nbsp;
                <input type="submit" value="Save Changes" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>


