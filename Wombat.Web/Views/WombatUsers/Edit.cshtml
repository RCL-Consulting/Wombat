@model WombatUserVM

@{
    ViewData["Title"] = "Edit User Roles";
}

<div class="container mt-4">
    <div class="card card-accent-edit shadow-sm">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="fas fa-user me-2"></i>Wombat User - Edit
            </h5>
        </div>

        <form asp-action="Edit">
            <div class="card-body">

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Name" />
                <input type="hidden" asp-for="Surname" />
                <input type="hidden" asp-for="Institution" />
                <input type="hidden" asp-for="InstitutionId" />

                <div class="mb-3">
                    <label class="form-label fw-semibold">Email</label>
                    <div class="form-control-plaintext">@Model.Email</div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Roles</label>
                    <div class="ps-2">
                        @Html.EditorFor(model => model.Roles)
                    </div>
                </div>

            </div>
            <div class="card-footer bg-light d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-icon btn-back" title= "All Users">
                    <i class="fa-solid fa-list"></i>
                </a>
                <button type="submit" class="btn btn-icon btn-edit" title="Save Changes">
                    <i class="fas fa-save"></i>
                </button>
            </div>
        </form>
    </div>
</div>
