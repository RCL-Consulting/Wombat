@model WombatUserVM

@{
    ViewData["Title"] = "Edit User Roles";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">
                <i class="fas fa-user-edit me-2"></i>Edit User Roles
            </h4>
        </div>

        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Name" />
                <input type="hidden" asp-for="Surname" />
                <input type="hidden" asp-for="Institution" />
                <input type="hidden" asp-for="InstitutionId" />

                <div class="mb-3">
                    <label class="form-label fw-semibold">Email</label>
                    <div class="form-control-plaintext">@Model.Email</div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Roles</label>
                    <div class="ps-2">
                        @Html.EditorFor(model => model.Roles)
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-dark">
                        <i class="fas fa-arrow-left me-1"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-save me-1"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
