@model IEnumerable<EPAQuestionFormVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="row">
    <div class="col-md-12">
        <table class="table" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EPAName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SpecialityName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SubSpecialityName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Questions.Count)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.EPAName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SpecialityName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SubSpecialityName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Questions.Count)
                        </td>
                        <td>
                            <a class="btn btn-warning" asp-action="Edit" asp-route-epaId="@item.EPAId"><i class="fas fa-pencil-alt"></i></a>
                            <a class="btn btn-info" asp-action="Details" asp-route-epaId="@item.EPAId"><i class="fas fa-info-circle"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<form id="deleteForm" asp-action="Delete">
    <input type="hidden" id="FormId" name="Id" />
</form>

@section Scripts {
    <script>
        $(function () {

            $('.deleteBtn').click(function (e) {
                swal({
                    title: "Are you sure?",
                    text: "Are you sure you want to delete this record?",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true
                }).then((confirm) => {
                    if (confirm) {
                        var btn = $(this);
                        var id = btn.data("id");
                        $("#FormId").val(id);
                        $("#deleteForm").submit();
                    }
                });
            });
        });
    </script>
}