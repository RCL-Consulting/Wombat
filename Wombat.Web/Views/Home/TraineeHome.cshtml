@model DashboardVM
@using Newtonsoft.Json

<!-- Summary Cards -->
<div class="row row-cols-1 row-cols-md-4 g-4 mb-4">
    <div class="col">
        <div class="card border-start border-4 border-danger shadow-sm h-100">
            <div class="card-body text-center">
                <h4 class="text-danger">@Model.NumberOfRequestsMade</h4>
                <p class="text-muted">@Html.DisplayNameFor(m => m.NumberOfRequestsMade)</p>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card border-start border-4 border-secondary shadow-sm h-100">
            <div class="card-body text-center">
                <h4 class="text-secondary">@Model.NumberOfRequestsDeclined</h4>
                <p class="text-muted">@Html.DisplayNameFor(m => m.NumberOfRequestsDeclined)</p>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card border-start border-4 border-primary shadow-sm h-100">
            <div class="card-body text-center">
                <h4 class="text-primary">@Model.NumberOfPendingAssessments</h4>
                <p class="text-muted">@Html.DisplayNameFor(m => m.NumberOfPendingAssessments)</p>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card border-start border-4 border-success shadow-sm h-100">
            <div class="card-body text-center">
                <h4 class="text-success">@Model.NumberOfCompletedAssessments</h4>
                <p class="text-muted">@Html.DisplayNameFor(m => m.NumberOfCompletedAssessments)</p>
            </div>
        </div>
    </div>
</div>

<!-- Pie Chart -->
<div class="card shadow mb-4">
    <div class="card-header bg-light">
        <h5 class="mb-0">Assessment Status Breakdown</h5>
    </div>
    <div class="card-body">
        <div style="max-width: 400px; margin: auto;">
            <canvas id="assessmentChart"></canvas>
        </div>
    </div>
</div>

<!-- Portfolio Cards with Progress -->
<h4 class="my-3">Portfolio Progress</h4>
<div class="row row-cols-1 row-cols-md-2 g-4">
    @foreach (var item in Model.EPAList)
    {
        int total = Model.TotalAssessmentsPerEPA.ContainsKey(item.Id) ? Model.TotalAssessmentsPerEPA[item.Id] : 0;
        int visible = Model.VisibleAssessmentsPerEPA.ContainsKey(item.Id) ? Model.VisibleAssessmentsPerEPA[item.Id] : 0;
        int percent = (total > 0) ? (int)(100.0 * visible / total) : 0;

        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text text-muted">@item.Description</p>
                    <div class="progress mb-2" style="height: 20px;">
                        <div class="progress-bar" role="progressbar" style="width: @percent%;" aria-valuenow="@percent" aria-valuemin="0" aria-valuemax="100">
                            @visible of @total
                        </div>
                    </div>
                    <div class="d-flex justify-content-end">
                        @if (total > 0)
                        {
                            <a class="btn btn-sm btn-outline-warning me-2" asp-controller="LoggedAssessments" asp-action="PortfolioByEPA" asp-route-id="@item.Id" title="Edit Portfolio">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                        }
                        <a class="btn btn-sm btn-outline-success" asp-controller="AssessmentRequests" asp-action="CreateForEPA" asp-route-id="@item.Id" title="Request Assessment">
                            <i class="fas fa-clipboard-check"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

