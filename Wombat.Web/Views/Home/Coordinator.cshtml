@model CoordinatorDashboardVM

<h4 class="text-uppercase fw-bold mb-4">
    <i class="fas fa-user-cog me-2"></i>Coordinator Dashboard
</h4>

<div class="row mt-4">

    <!-- Pending Registrations Summary -->
    <div class="col-md-6 col-xl-4 mb-4">
        <div class="card card-accent shadow-sm h-100">
            <div class="card-header card-header-primary d-flex justify-content-between align-items-center">
                <h6 class="mb-0"><i class="fas fa-user-clock me-2"></i>Pending Registrations</h6>
            </div>
            <div class="card-body p-3">
                @if (Model.PendingTrainees.Any())
                {
                    <p>@Model.PendingTrainees.Count pending trainee registration(s).</p>
                }
                else
                {
                    <p class="text-muted">No pending trainee registrations.</p>
                }
                <div class="d-flex gap-2">
                    <a asp-controller="Coordinators" asp-action="Pending"
                       class="btn btn-sm btn-outline-primary rounded-pill">
                        <i class="fas fa-user-clock me-1"></i> View All
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Trainee Progress Summary -->
    <div class="col-md-6 col-xl-4 mb-4">
        <div class="card card-accent shadow-sm h-100">
            <div class="card-header card-header-primary d-flex justify-content-between align-items-center">
                <h6 class="mb-0"><i class="fas fa-chart-line me-2"></i>Trainee Progress</h6>
            </div>
            <div class="card-body p-3">
                <p class="text-muted">No trainee progress available.</p>
                <div class="d-flex gap-2">
                    <a asp-controller="Coordinators" asp-action="Progress"
                       class="btn btn-sm btn-outline-primary rounded-pill">
                        <i class="fas fa-chart-line me-1"></i> View All
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Submissions Summary -->
    <div class="col-md-6 col-xl-4 mb-4">
        <div class="card card-accent shadow-sm h-100">
            <div class="card-header card-header-primary d-flex justify-content-between align-items-center">
                <h6 class="mb-0"><i class="fas fa-inbox me-2"></i>Recent Submissions</h6>
            </div>
            <div class="card-body p-3">
                <p class="text-muted">No recent submissions.</p>
                <div class="d-flex gap-2">
                    <a asp-controller="Coordinators" asp-action="Progress"
                       class="btn btn-sm btn-outline-primary rounded-pill">
                        <i class="fas fa-inbox me-1"></i> View All
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Flagged Assessments Summary -->
    <div class="col-md-6 col-xl-4 mb-4">
        <div class="card card-accent shadow-sm h-100">
            <div class="card-header card-header-primary d-flex justify-content-between align-items-center">
                <h6 class="mb-0"><i class="fas fa-flag me-2"></i>Flagged Assessments</h6>
            </div>
            <div class="card-body p-3">
                <p class="text-muted">No flagged assessments.</p>
                <div class="d-flex gap-2">
                    <a asp-controller="Coordinators" asp-action="Progress"
                       class="btn btn-sm btn-outline-primary rounded-pill">
                        <i class="fas fa-flag me-1"></i> View All
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<hr class="mt-5 mb-4 border-top border-2" />
