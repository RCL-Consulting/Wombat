@model DashboardVM
@inject Wombat.Application.Contracts.IUserContextService UserContext

@{
    ViewData["Title"] = "Home Page";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<hr />
<div class="row mt-4">

    @if (UserContext.CanManageInstitutions)
    {
        <div class="col-md-6 col-xl-4 mb-4">
            <div class="card card-accent shadow-sm h-100">
                <div class="card-body">
                    <div class="fw-semibold text-muted mb-1">
                        <i class="fas fa-university me-2"></i>Institutions
                    </div>
                    <div class="small text-muted mb-3">
                        @Model.NumberOfInstitutions total
                    </div>
                    <a asp-controller="Institutions" asp-action="Index" class="btn btn-sm btn-outline-primary rounded-pill">
                        <i class="fas fa-university me-1"></i> Manage
                    </a>
                </div>
            </div>
        </div>
    }


    <div class="col-md-6 col-xl-4 mb-4">
        <div class="card card-accent shadow-sm h-100">
            <div class="card-body">
                <div class="fw-semibold text-muted mb-1">
                    <i class="fas fa-book-open me-2"></i>Specialities
                </div>
                <div class="small text-muted mb-3">
                    @Model.NumberOfSpecialities specialities • @Model.NumberOfSubSpecialities subspecialities
                </div>
                <div class="d-flex gap-2">
                    <a asp-controller="Specialities" asp-action="Index" class="btn btn-sm btn-outline-primary rounded-pill">
                        <i class="fas fa-book-open me-1"></i> Specialities
                    </a>
                    <a asp-controller="SubSpecialities" asp-action="Index" class="btn btn-sm btn-outline-secondary rounded-pill">
                        <i class="fa fa-book-bookmark me-1"></i> Subspecialities
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (UserContext.CanManageUsers || UserContext.CanManageInvitations)
    {
        <div class="col-md-6 col-xl-4 mb-4">
            <div class="card card-accent shadow-sm h-100">
                <div class="card-body">
                    <div class="fw-semibold text-muted mb-1">
                        <i class="fas fa-users me-2"></i>Users
                    </div>
                    <div class="small text-muted mb-3">
                        @Model.NumberOfUsers users • @Model.NumberOfInvitations invitations
                    </div>
                    <div class="d-flex gap-2 flex-wrap">
                        <a asp-controller="WombatUsers" asp-action="Index" class="btn btn-sm btn-outline-primary rounded-pill">
                            <i class="fas fa-users me-1"></i> Users
                        </a>
                        <a asp-controller="RegistrationInvitations" asp-action="Invite" class="btn btn-sm btn-outline-success rounded-pill">
                            <i class="fas fa-user-plus me-1"></i> Invite
                        </a>
                        <a asp-controller="RegistrationInvitations" asp-action="Index" class="btn btn-sm btn-outline-secondary rounded-pill">
                            <i class="fas fa-envelope-open-text me-1"></i> Invitations
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="col-md-6 col-xl-4 mb-4">
        <div class="card card-accent shadow-sm h-100">
            <div class="card-body">
                <div class="fw-semibold text-muted mb-1">
                    <i class="fas fa-tasks me-2"></i>Entrustable Professional Activities
                </div>
                <div class="small text-muted mb-3">
                    @Model.NumberOfEPAs defined
                </div>
                <div class="d-flex gap-2">
                    <a asp-controller="EPAs" asp-action="Index" class="btn btn-sm btn-outline-primary rounded-pill">
                        <i class="fas fas fa-tasks me-1"></i>EPAs
                    </a>
                    <a asp-controller="STARApplicationForms" asp-action="Index" class="btn btn-sm btn-outline-secondary rounded-pill">
                        <i class="fas fa-layer-group me-1"></i>STAR Forms
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-xl-4 mb-4">
        <div class="card card-accent shadow-sm h-100">
            <div class="card-body">
                <div class="fw-semibold text-muted mb-1">
                    <i class="fas fa-file-alt me-2"></i>Assessment Forms
                </div>
                <div class="small text-muted mb-3">
                    @Model.NumberOfAssessmentForms forms
                </div>
                <div class="d-flex gap-2">
                    <a asp-controller="AssessmentForms" asp-action="Index" class="btn btn-sm btn-outline-primary rounded-pill">
                        <i class="fas fa-file-alt me-1"></i>Forms
                    </a>
                    <a asp-controller="OptionSets" asp-action="Index" class="btn btn-sm btn-outline-secondary rounded-pill">
                        <i class="fas fa-sliders-h me-1"></i>Response Options
                    </a>
                </div>
            </div>
        </div>
    </div>

</div>