@model DashboardVM

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fas fa-chart-line"></i> EPA Progress Tracker</h5>
        <button class="btn btn-sm btn-light" type="button" data-bs-toggle="collapse" data-bs-target="#progressCollapse" aria-expanded="true" aria-controls="portfolioCollapse">
            <i class="fas fa-chevron-down"></i>
        </button>
    </div>
    <div id="progressCollapse" class="collapse show">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover small align-middle" style="width: 100%">
                    <thead class="table-light">
                        <tr>
                            <th>EPA</th>
                            <th>Current Rating</th>
                            <th>Target Rating</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.EPAList)
                        {
                            var current = Model.HighestRatingPerEPA.GetValueOrDefault(item.Id);
                            var target = Model.ExpectedRatingPerEPA.GetValueOrDefault(item.Id);
                            string status = current >= target ? "🟢 On track" :
                            current == 0 ? "⚪ No data" :
                            current + 1 == target ? "🟡 Nearly there" : "🔴 Behind";

                            <tr>
                                <td>@item.Name</td>
                                <td>@(current > 0 ? $"Level {current}" : "-")</td>
                                <td>Level @target</td>
                                <td>@status</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
