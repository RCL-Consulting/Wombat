@model IEnumerable<AssessmentRequestVM>

<div class="card card-accent-success shadow-sm h-100">
    <div class="card-header">
        <h6 class="mb-0"><i class="fas fa-check-circle me-2"></i>Accepted Assessment Requests</h6>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <p class="text-muted">No accepted requests yet.</p>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-sm table-bordered align-middle">
                    <thead class="table-success">
                        <tr>
                            <th>EPA</th>
                            <th>Assessment Date</th>
                            <th>Assessor</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderBy(r => r.AssessmentDate))
                        {
                            <tr>
                                <td>@item.ShortEPADisplayName</td>
                                <td>@item.AssessmentDate?.ToString("yyyy-MM-dd")</td>
                                <td>@item.Assessor?.Name</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
