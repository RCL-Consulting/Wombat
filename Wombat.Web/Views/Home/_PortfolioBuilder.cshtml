@model DashboardVM

<div class="card card-accent shadow-sm h-100">
    <div class="card-header card-header-primary">
        <h6 class="mb-0 text-uppercase">
            <i class="fas fa-folder-open me-2"></i>Portfolio Builder
        </h6>
    </div>
    <div class="card-body">
        <div class="table-responsive small">
            <table class="table table-striped align-middle" style="width: 100%">
                <thead class="table-light">
                    <tr>
                        <th>EPA</th>
                        <th>Visible</th>
                        <th>Total</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.EPAList)
                    {
                        int total = Model.TotalAssessmentsPerEPA.GetValueOrDefault(item.Id);
                        int visible = Model.VisibleAssessmentsPerEPA.GetValueOrDefault(item.Id);
                        <tr>
                            <td>@item.Name</td>
                            <td>@visible</td>
                            <td>@total</td>
                            <td class="text-center">
                                @if (total > 0)
                                {
                                    <a class="btn btn-sm btn-outline-warning rounded-pill"
                                       asp-controller="LoggedAssessments"
                                       asp-action="PortfolioByEPA"
                                       asp-route-id="@item.Id">
                                        <i class="fas fa-pencil-alt me-1"></i> Edit
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

