@model DashboardVM

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">📅 Schedule New Assessment</h5>
    </div>
    <div class="card-body">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
            @foreach (var item in Model.EPAList.OrderBy(e => Model.TotalAssessmentsPerEPA.GetValueOrDefault(e.Id)))
            {
                int total = Model.TotalAssessmentsPerEPA.GetValueOrDefault(item.Id);
                <div class="col">
                    <div class="card h-100 border-light">
                        <div class="card-body">
                            <h6 class="card-title">@item.Name</h6>
                            <p class="card-text text-muted small">@item.Description</p>
                            <p class="text-muted mb-1"><strong>@total</strong> assessment(s) logged</p>
                            <a class="btn btn-sm btn-outline-success w-100" asp-controller="AssessmentRequests" asp-action="CreateForEPA" asp-route-id="@item.Id">
                                <i class="fas fa-clipboard-check me-1"></i> Request Assessment
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
