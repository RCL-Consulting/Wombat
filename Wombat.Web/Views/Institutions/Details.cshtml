@model InstitutionVM

@{
    ViewData["Title"] = "Institution Details";
}

<div class="container mt-4">
    <div class="card card-accent-details shadow-sm">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-university me-2"></i>Details</h5>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.Logo)
                </dt>
                <dd class="col-sm-9 text-center">
                    @{
                        var hasLogo = Model.Logo != null;
                        var base64Image = hasLogo ? Convert.ToBase64String(Model.Logo) : null;
                        var imageSrc = hasLogo ? $"data:image/png;base64,{base64Image}" : "/images/placeholder-logo.png";
                    }

                    <img src="@imageSrc"
                         alt="Logo"
                         class="img-thumbnail shadow-sm"
                         style="max-height: 200px;" />
                </dd>
            </dl>
        </div>
        <div class="card-footer bg-light d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-icon btn-back" title="All Institutions">
                <i class="fa-solid fa-list"></i>
            </a>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-icon btn-edit" title="Edit">
                <i class="fas fa-pencil-alt"></i>
            </a>
        </div>
    </div>
</div>
