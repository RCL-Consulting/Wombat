@model InstitutionVM

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Institution</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Logo)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Logo != null)
            {
                var base64Image = Convert.ToBase64String(Model.Logo);
                var imageSrc = $"data:image/png;base64,{base64Image}"; // Assuming the logo is in PNG format
                <img src="@imageSrc" alt="Logo" style="height: 200px; width: auto;" />
            }
            else
            {
                <p>No logo available</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-dark">Back to List</a> &nbsp;
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Edit</a>
</div>
