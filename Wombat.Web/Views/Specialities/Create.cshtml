@model SpecialityVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create a speciality</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" id="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            
            <h4>Subspecialities</h4>
            <hr />
            <div id="subspecialitiesContainer">
                @Html.EditorFor(model=>model.SubSpecialities)
            </div>
            <br/>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-dark">Back to List</a> &nbsp;
                <input type="button" value="Add subspeciality" class="btn btn-info" id="btnAdd" />&nbsp;
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {

    <script type="text/javascript">
        $("#btnAdd").on('click', function () {
            $.ajax({
                async: true,
                data: $('#form').serialize(),
                type: "POST",
                url: '/Specialities/AddSubSpeciality',
                success: function (partialView) {
                    console.log("partialView: " + partialView);
                    $('#subspecialitiesContainer').html(partialView);
                }
            });
        });
    </script>
}