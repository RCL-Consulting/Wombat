@model SpecialityVM
@inject Wombat.Application.Contracts.IUserContextService UserContext

@{
    ViewData["Title"] = "Speciality Details";
}

<div class="container mt-4">
    <div class="card card-accent-details shadow-sm">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-book-open me-2"></i>Speciality - Details</h5>
        </div>

        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-semibold">Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3 fw-semibold align-self-start">Subspecialities</dt>
                <dd class="col-sm-9">
                    @if (Model.SubSpecialities != null && Model.SubSpecialities.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var sub in Model.SubSpecialities)
                            {
                                <li class="list-group-item px-0 py-1">
                                    @Html.DisplayFor(modelItem => sub.Name)
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span class="text-muted fst-italic">None</span>
                    }
                </dd>
            </dl>
        </div>

        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-icon btn-back" title="All Institutions">
                <i class="fa-solid fa-list"></i>
            </a>
            @if (UserContext.CanManageSpecialities)
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-icon btn-edit" title="Edit">
                    <i class="fas fa-pencil-alt"></i>
                </a>
            }
        </div>
    </div>
</div>
