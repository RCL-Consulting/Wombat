@model OptionSetVM

@{
    ViewData["Title"] = "Response Option Set - Details";
}

<div class="container mt-4">
    <div class="card card-accent-details shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-sliders-h me-2"></i>Response Option Set - Details
            </h5>
        </div>

        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-semibold">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3 fw-semibold">Institution</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.InstitutionName))
                    {
                        @Model.InstitutionName
                    }
                    else
                    {
                        <span class="text-muted fst-italic">All</span>
                    }
                </dd>

                <dt class="col-sm-3 fw-semibold">Speciality</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.SpecialityName))
                    {
                        @Model.SpecialityName
                    }
                    else
                    {
                        <span class="text-muted fst-italic">All</span>
                    }
                </dd>

                <dt class="col-sm-3 fw-semibold">Subspeciality</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.SubSpecialityName))
                    {
                        @Model.SubSpecialityName
                    }
                    else
                    {
                        <span class="text-muted fst-italic">All</span>
                    }
                </dd>

                <dt class="col-sm-3 fw-semibold">Display Rank</dt>
                <dd class="col-sm-9">@Model.DisplayRank</dd>

                <dt class="col-sm-3 fw-semibold align-self-start">Options</dt>
                <dd class="col-sm-9">
                    @if (Model.Options != null && Model.Options.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var opt in Model.Options.OrderBy(o => o.Rank))
                            {
                                <li class="list-group-item px-0 py-1">
                                    @if (Model.DisplayRank)
                                    {
                                        <span class="me-2 text-muted">@opt.Rank.</span>
                                    }
                                    @opt.Description
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span class="text-muted fst-italic">No options defined.</span>
                    }
                </dd>
            </dl>
        </div>

        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-icon btn-back" title="Back to List">
                <i class="fas fa-list"></i>
            </a>
            @if (Model.IsEditableByCurrentUser)
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-icon btn-edit" title="Edit">
                    <i class="fas fa-pencil-alt"></i>
                </a>
            }
        </div>
    </div>
</div>
