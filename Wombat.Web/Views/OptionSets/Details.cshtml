@model OptionSetVM

@{
    ViewData["Title"] = "Option Set Details";
}

<h1>Details</h1>

<div>
    <h4>Option Set</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DisplayRank)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DisplayRank)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Options)
        </dt>
        <dd class="col-sm-10">
            <ul class="row list-unstyled">
                @if( Model.Options != null )
                {
                    foreach (var item in Model.Options)
                    {
                        <li class="col-sm-10">
                            @Html.DisplayFor(modelItem => item.Rank) - @Html.DisplayFor(modelItem => item.Description)
                        </li>
                    }
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-dark">Back to List</a> &nbsp;
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Edit</a>
</div>
