@model Wombat.Common.Models.STARItemVM

<div class="card shadow-sm border border-primary-subtle bg-light mb-3 inputFormRow" id="inputFormRow_@Model.DisplayId">
    <div class="card-header bg-primary bg-opacity-10 border-bottom d-flex justify-content-between align-items-center">
        <span class="fw-semibold criterion-label">
            <i class="fas fa-grip-vertical me-2 drag-handle text-muted"></i>
            Question @Model.DisplayId
        </span>
        <div class="d-flex gap-1">
            <button type="button" class="btn btn-icon btn-light btn-move-up" title="Move Up">
                <i class="fas fa-arrow-up"></i>
            </button>
            <button type="button" class="btn btn-icon btn-light btn-move-down" title="Move Down">
                <i class="fas fa-arrow-down"></i>
            </button>
            <button type="button" class="btn btn-icon btn-delete btn-sm btnDelete" title="Delete">
                <i class="fas fa-trash-alt"></i>
            </button>
        </div>
    </div>

    <div class="card-body pt-3 pb-2 position-relative">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="DisplayId" class="display-id" />

        <div class="mb-3">
            <label asp-for="Heading" class="form-label fw-semibold">Category</label>
            <input asp-for="Heading" class="form-control" placeholder="e.g. Prior Experience" />
            <span asp-validation-for="Heading" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label fw-semibold">Title</label>
            <input asp-for="Description" class="form-control" placeholder="e.g. Describe your previous work..." />
            <span asp-validation-for="Description" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="OptionSetId" class="form-label fw-semibold">Response Option Set</label>
            <select asp-for="OptionSetId" class="form-select" asp-items="Model.AvailableOptionSets">
                <option value="">-- Select a response option set --</option>
            </select>
            <span asp-validation-for="OptionSetId" class="text-danger small"></span>

            <div class="mb-2 options-preview-container">
                <a class="text-decoration-none small text-primary toggle-preview" href="#" data-target="#optionsPreview_@Model.DisplayId">
                    Show Available Options
                </a>
                <div class="collapse mt-2" id="optionsPreview_@Model.DisplayId">
                    <div class="card card-body bg-light border option-preview" data-displayid="@Model.DisplayId">
                        <em class="text-muted small">Select an option set to see available choices</em>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
