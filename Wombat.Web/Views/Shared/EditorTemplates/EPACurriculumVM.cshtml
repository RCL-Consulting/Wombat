@model EPACurriculumVM

<div id="inputFormRow_@Model.DisplayId" class="card shadow-sm p-3 inputFormRow">
    <div class="row g-3 align-items-center">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="DisplayId" class="display-id" />

        <div class="col-12 col-md-5">
            <label asp-for="NumberOfMonths" class="form-label fw-semibold">Months from registration</label>
            <input asp-for="NumberOfMonths" class="form-control" type="number" min="0" placeholder="e.g., 6" required />
            <span asp-validation-for="NumberOfMonths" class="text-danger small"></span>
        </div>

        <div class="col-12 col-md-5">
            <label asp-for="EPAScaleId" class="form-label fw-semibold">Expected EPA score</label>
            <select asp-for="EPAScaleId" asp-items="EPACurriculumVM.AvailableScaleOptions" class="form-select">
                <option value="">-- Select a score --</option>
            </select>
            <span asp-validation-for="EPAScaleId" class="text-danger small"></span>
        </div>

        <div class="col-12 col-md-2 text-end mt-2 mt-md-4">
            <button type="button" class="btn btn-icon btn-delete btn-sm" id="btnDeleteCurriculum" title="Delete">
                <i class="fas fa-trash-alt"></i>
            </button>
        </div>
    </div>
</div>

